# ========================================
# 加密货币交易系统 - 环境变量配置
# ========================================

# ----------------------------------------
# 数据库配置
# ----------------------------------------
# SQLite配置 (默认，无需安装额外服务)
DATABASE_URL=sqlite:///./crypto_bot.db

# 如果使用PostgreSQL，请取消注释并配置:
# DATABASE_URL=postgresql://username:password@localhost/cryptobot
# PostgreSQL安装: brew install postgresql

# ----------------------------------------
# JWT安全配置
# ----------------------------------------
# JWT密钥 (生产环境必须修改为随机字符串!)
# 生成方式: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production

# JWT算法
ALGORITHM=HS256

# Token过期时间 (分钟)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ----------------------------------------
# API服务配置
# ----------------------------------------
# 监听地址 (0.0.0.0 允许外部访问)
API_HOST=0.0.0.0

# 监听端口
API_PORT=8000

# 是否启用热重载 (开发模式)
API_RELOAD=True

# ----------------------------------------
# 交易所API配置 (可选)
# ----------------------------------------
# 交易所ID: binance, okx, huobi 等
EXCHANGE_ID=binance

# 交易所API密钥 (用于实盘交易，仅用于测试可留空)
API_KEY=

# 交易所API密钥 (用于实盘交易，仅用于测试可留空)
API_SECRET=

# ----------------------------------------
# 网格策略默认参数
# ----------------------------------------
# 网格层数
GRID_LEVELS=10

# 网格间距 (百分比, 0.02 = 2%)
GRID_SPACING=0.02

# 投资金额
INVESTMENT_AMOUNT=1000

# ----------------------------------------
# 日志配置
# ----------------------------------------
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----------------------------------------
# Redis缓存配置 (可选)
# ----------------------------------------
# 是否启用Redis (False使用内存缓存)
REDIS_ENABLED=False

# Redis主机
REDIS_HOST=localhost

# Redis端口
REDIS_PORT=6379

# Redis数据库
REDIS_DB=0

# Redis密码
REDIS_PASSWORD=

# 缓存默认TTL (秒)
CACHE_TTL_DEFAULT=60

# ----------------------------------------
# 安全配置
# ----------------------------------------
# 加密密钥 (用于API密钥加密存储)
# 生成方式: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-change-in-production-use-fernet-key

# 是否启用审计日志
AUDIT_LOG_ENABLED=True

# 审计日志保留天数
AUDIT_LOG_RETENTION_DAYS=90

# 是否启用敏感操作二次验证
SENSITIVE_OPERATIONS_VERIFY=True

# 最大登录尝试次数
MAX_LOGIN_ATTEMPTS=5

# 登录锁定时长 (秒)
LOGIN_LOCKOUT_DURATION=1800

# ----------------------------------------
# 邮箱配置 (可选，用于发送通知邮件)
# ----------------------------------------
# SMTP服务器地址
SMTP_HOST=smtp.gmail.com

# SMTP端口
SMTP_PORT=587

# SMTP用户名
SMTP_USERNAME=

# SMTP密码 (或应用专用密码)
SMTP_PASSWORD=

# 发件人邮箱
SMTP_FROM_EMAIL=

# 是否使用TLS加密
SMTP_USE_TLS=True

# ----------------------------------------
# 前端配置
# ----------------------------------------
# 前端URL (用于生成验证邮件中的链接)
FRONTEND_URL=http://localhost:3000
