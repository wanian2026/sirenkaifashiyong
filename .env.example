# 数据库配置
DATABASE_URL=sqlite:///./crypto_bot.db
# DATABASE_URL=postgresql://user:password@localhost/cryptobot

# JWT认证配置
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ========================================
# 交易所API配置
# ========================================
# 支持的交易所: binance, okx, huobi, kucoin, bybit, gate
# 默认使用 Binance
EXCHANGE_ID=binance

# API密钥配置
# 注意：
# 1. 如果只查询公开市场数据（价格、K线、深度），可以不填API_KEY和API_SECRET
# 2. 如果需要执行实际交易或查询账户信息，必须填写API_KEY和API_SECRET
# 3. 建议创建只读权限的API密钥用于测试
API_KEY=your-api-key-here
API_SECRET=your-api-secret-here

# ========================================
# 交易所API获取方式
# ========================================
# Binance: https://www.binance.com/en/my/settings/api-management
# OKX: https://www.okx.com/account/my-api
# Huobi: https://www.huobi.com/en-us/opend/
# KuCoin: https://www.kucoin.com/account/api
# Bybit: https://www.bybit.com/app/user/api-management
# Gate: https://www.gate.io/myaccount/apimanagement

# ========================================
# 策略配置
# ========================================
GRID_LEVELS=10
GRID_SPACING=0.02
INVESTMENT_AMOUNT=1000

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=INFO

# ========================================
# Redis缓存配置
# ========================================
# 是否启用Redis缓存（false则使用内存缓存）
REDIS_ENABLED=false

# Redis连接配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 默认缓存时间（秒）
CACHE_TTL_DEFAULT=60

# 注意：
# 1. 如果使用Redis，需要先启动Redis服务
#    - Mac: brew install redis && brew services start redis
#    - Ubuntu: sudo apt install redis-server && sudo systemctl start redis
#    - Docker: docker run -d -p 6379:6379 redis
# 2. 内存缓存模式：REDIS_ENABLED=false（默认）
#    - 优点：无需额外安装
#    - 缺点：重启后缓存丢失
# 3. Redis缓存模式：REDIS_ENABLED=true
#    - 优点：持久化、高性能、分布式
#    - 缺点：需要安装Redis服务

